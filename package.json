{
  "name": "windows-simulator",
  "version": "1.0.7",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable --x64",
    "build:dir": "electron-builder --win portable --x64 --dir"
  },
  "build": {
    "appId": "com.windows11.simulator",
    "productName": "Windows 11 Simulator",
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "windows.ico"
    },
    "directories": {
      "output": "dist"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "electron-context-menu": "^3.6.1",
    "electron-store": "^8.1.0"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "extract-zip": "^2.0.1",
    "https": "^1.0.0",
    "util": "^0.12.5"
  }
}
