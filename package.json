{
  "name": "windows-simulator",
  "version": "1.0.8",
  "main": "src/main.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tysaiwofc/win11-simulator.git"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win portable --x64",
    "build:dir": "electron-builder --win portable --x64 --dir"
  },
  "build": {
    "appId": "com.windows11.simulator",
    "productName": "Windows 11 Simulator",
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "tysaiwofc",
        "repo": "win11-simulator"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "windows.ico"
    },
    "directories": {
      "output": "dist"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "electron-context-menu": "^3.6.1",
    "electron-store": "^8.2.0"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "electron-log": "^5.3.4",
    "electron-updater": "^6.6.2",
    "extract-zip": "^2.0.1",
    "https": "^1.0.0",
    "util": "^0.12.5"
  }
}
